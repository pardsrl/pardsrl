<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %}{% if __title is defined %} {{ __title }} - {% endif %}Panel de Control{% endblock %}</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="{{ asset('dashboard_v2/bootstrap/css/bootstrap.min.css') }}">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="{{ asset('dashboard_v2/font-awesome/css/font-awesome.min.css') }}">
    <!-- Ionicons -->
    <link rel="stylesheet" href="{{ asset('dashboard_v2/ionicons/css/ionicons.min.css') }}">
    <!-- Theme style -->
    <link rel="stylesheet" href="{{ asset('dashboard_v2/dist/css/AdminLTE.min.css') }}">

    <link rel="stylesheet" href="{{ asset('bundles/app/app.css') }}">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="{{ asset('dashboard_v2/dist/css/skins/skin-black.min.css') }}">

    <link rel="stylesheet" href="{{ asset('dashboard_v2/plugins/datepicker/datepicker3.css') }}">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="{{ asset('dashboard/ie8/html5shiv.min.js') }}"></script>
    <script src="{{ asset('dashboard/ie8/respond.min.js') }}"></script>
    <![endif]-->
    {% block stylesheets %}{% endblock %}
</head>


<body class="hold-transition skin-black sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">

    <!-- Main Header -->
    <header class="main-header">

        <!-- Logo -->
        <a href="{{ path('dashboard') }}" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini"><b>P</b>&P</span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg"><b>Pard</b>SRL</span>
        </a>

        <!-- Header Navbar -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
            </a>
            <!-- Navbar Right Menu -->
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <!-- Messages: style can be found in dropdown.less-->
                    {#<li class="dropdown messages-menu">#}
                        {#<!-- Menu toggle button -->#}
                        {#<a href="#" class="dropdown-toggle" data-toggle="dropdown">#}
                            {#<i class="fa fa-envelope-o"></i>#}
                            {#<span class="label label-success">4</span>#}
                        {#</a>#}
                        {#<ul class="dropdown-menu">#}
                            {#<li class="header">Tienes 4 mensajes</li>#}
                            {#<li>#}
                                {#<!-- inner menu: contains the messages -->#}
                                {#<ul class="menu">#}
                                    {#<li><!-- start message -->#}
                                        {#<a href="#">#}
                                            {#<div class="pull-left">#}
                                                {#<!-- User Image -->#}
                                                {#<img src="{{ asset('dashboard_v2/dist/img/user2-160x160.jpg') }}" class="img-circle" alt="User Image">#}
                                            {#</div>#}
                                            {#<!-- Message title and timestamp -->#}
                                            {#<h4>#}
                                                {#Equipo de soporte#}
                                                {#<small><i class="fa fa-clock-o"></i> 5 mins</small>#}
                                            {#</h4>#}
                                            {#<!-- The message -->#}
                                            {#<p>Que tal les ha parecido la demo?<br> Creo que les va a gustar ;)</p>#}
                                        {#</a>#}
                                    {#</li><!-- end message -->#}
                                {#</ul><!-- /.menu -->#}
                            {#</li>#}
                            {#<li class="footer"><a href="#">Ver todos los mensajes</a></li>#}
                        {#</ul>#}
                    {#</li><!-- /.messages-menu -->#}

                    {#<!-- Notifications Personales Menu -->#}
                    {#{{ render(controller('AppBundle:Notificaciones:notificacionesPersonales')) }}#}

                    {#<!-- Notifications Sistema Menu -->#}
                    {#{{ render(controller('AppBundle:Notificaciones:notificacionesSistema')) }}#}

                    <!-- User Account Menu -->
                    <li class="dropdown user user-menu">
                        <!-- Menu Toggle Button -->
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <!-- The user image in the navbar-->
                            <img src="{{ asset('dashboard_v2/dist/img/user2-160x160.jpg') }}" class="user-image" alt="User Image">
                            <!-- hidden-xs hides the username on small devices so only the image appears. -->
                            <span class="hidden-xs">{{ app.user.persona.nombreCompleto }}</span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- The user image in the menu -->
                            <li class="user-header">
                                <img src="{{ asset('dashboard_v2/dist/img/user2-160x160.jpg') }}" class="img-circle" alt="User Image">
                                <p>
                                    {{ app.user.persona.nombreCompleto }} - {{ app.user.persona.cargo }}
                                    <small>Miembro de {{ app.user.persona.compania }}</small>
                                </p>
                            </li>
                            <!-- Menu Body -->
                            {#<li class="user-body">#}
                                {#<div class="col-xs-4 text-center">#}
                                    {#<a href="#">Followers</a>#}
                                {#</div>#}
                                {#<div class="col-xs-4 text-center">#}
                                    {#<a href="#">Sales</a>#}
                                {#</div>#}
                                {#<div class="col-xs-4 text-center">#}
                                    {#<a href="#">Friends</a>#}
                                {#</div>#}
                            {#</li>#}
                            <!-- Menu Footer-->
                            <li class="user-footer">
                                <div class="pull-left">
                                    <a href="#" class="btn btn-default btn-flat">Mi Perfil</a>
                                </div>
                                <div class="pull-right">
                                    <a href="{{ path('fos_user_security_logout') }}" class="btn btn-default btn-flat">Salir</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">

        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">

            <!-- Sidebar user panel (optional) -->
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="{{ asset('dashboard_v2/dist/img/user2-160x160.jpg') }}" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">
                    <p>{{ app.user.persona.nombreCompleto }}</p>
                    <!-- Status -->
                    <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                </div>
            </div>

            <!-- search form (Optional) -->
            <form action="#" method="get" class="sidebar-form">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Buscar...">
              <span class="input-group-btn">
                <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i></button>
              </span>
                </div>
            </form>
            <!-- /.search form -->

            <!-- Sidebar Menu -->
            {{ knp_menu_render('AppBundle:Builder:mainMenu', {'currentClass': 'active', 'ancestorClass':'active','template': 'AppBundle:Menu:knp_menu.html.twig'}) }}

            <!-- /.sidebar-menu -->
        </section>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            {% if __title is defined %}
                <h1 class="page-header">
                    {{ __title }} {% if __descripcion_opcional is defined %}<small>{{ __descripcion_opcional }}</small>{%  endif %}
                </h1>
            {% endif %}
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
                <li class="active">Here</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            {%  include 'flash_messages.html.twig' %}

            {% block content %}{% endblock %}

        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->

    {%  include 'modals.html.twig' %}
    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- To the right -->
        <div class="pull-right hidden-xs">
            {#Anything you want#}
        </div>
        <!-- Default to the left -->
        <strong>Copyright &copy; 2016 <a href="#">PardSRL</a>.</strong> Todos los derechos reservados.
    </footer>

</div><!-- ./wrapper -->

{% block javascripts %}
    <!-- jQuery 2.1.4 -->
    <script src="{{ asset('dashboard_v2/plugins/jQuery/jQuery-2.1.4.min.js') }}"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="{{ asset('dashboard_v2/bootstrap/js/bootstrap.min.js') }}"></script>
    <!-- bootstrap timepicker -->
    <script src="{{ asset('dashboard_v2/plugins/datepicker/bootstrap-datepicker.js') }}"></script>
    <script src="{{ asset('dashboard_v2/plugins/datepicker/locales/bootstrap-datepicker.es.js') }}"></script>

    <!-- AdminLTE App -->
    <script src="{{ asset('dashboard_v2/dist/js/app.min.js') }}"></script>


    <!-- Se carga socket.io en todo el site, debido a su uso principalmente en las notificaciones -->
    <script src="{{ asset('socket.io/socket.io-1.4.5.js') }}"></script>


    <script type="text/javascript">{% include 'app.js.twig' %} </script>
    {#<script src="{{ asset('bundles/app/app.js') }}"></script>#}


{% endblock %}
</body>
</html>