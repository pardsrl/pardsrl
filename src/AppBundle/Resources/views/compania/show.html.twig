{% extends 'base.html.twig' %}

{% block body %}
    <h1>Compania</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ companium.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ companium.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ companium.descripcion }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if companium.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Fechacreacion</th>
                <td>{% if companium.fechaCreacion %}{{ companium.fechaCreacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fechaactualizacion</th>
                <td>{% if companium.fechaActualizacion %}{{ companium.fechaActualizacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Creadopor</th>
                <td>{{ companium.creadoPor }}</td>
            </tr>
            <tr>
                <th>Actualizadopor</th>
                <td>{{ companium.actualizadoPor }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('compania_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('compania_edit', { 'id': companium.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
