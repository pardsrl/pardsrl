{% extends 'base.html.twig' %}

{% set __title = 'Usuarios' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Nombre de Usuario</th>
                            <th>Tel. principal</th>
                            <th>Cargo</th>
                            <th>Estado</th>
                            <th>Fecha Creaci√≥n</th>
                            <th>Creado Por</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for persona in personas %}
                            <tr>
                                <td><a href="{{ path('persona_show', { 'id': persona.id }) }}">{{ persona.id }}</a></td>
                                <td>{{ persona.nombre }}</td>
                                <td>{{ persona.apellido }}</td>
                                <td>{{ persona.usuario.username }}</td>
                                <td>{{ persona.telefonoPrincipal }}</td>
                                <td>{{ persona.cargo }}</td>
                                <td>{% if persona.usuario.enabled %}
                                        <span class="label label-success">Habilitado</span>
                                    {% else %}
                                        <span class="label label-danger">Baja</span>
                                    {% endif %}
                                </td>
                                <td>{% if persona.fechaCreacion %}{{ persona.fechaCreacion|date('d-m-Y') }}{% endif %}</td>
                                <td>{{ persona.creadoPor }}</td>
                                <td>
                                    <a title="Editar" class="btn btn-default btn-sm"
                                       href="{{ path('persona_edit', { 'id': persona.id }) }}"><i
                                                class="glyphicon glyphicon-pencil"></i></a>
                                    <a title="Cambiar Password" class="btn btn-default btn-sm"
                                       href="{{ path('cambiar-password', { 'id': persona.usuario.id }) }}"><i
                                                class="fa fa-fw fa-key"></i></a>
                                    <a title="Eliminar" class="btn btn-default btn-sm"
                                       href="{{ path('persona_delete', { 'id': persona.id }) }}">
                                        <i class="glyphicon glyphicon-remove-circle"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
            {{ knp_pagination_render(personas) }}
        </div>
    </div>



    <a class="btn btn-primary" href="{{ path('persona_new') }}">Nuevo Usuario</a>
{% endblock %}
