{% extends 'base.html.twig' %}

{% block body %}
    <h1>Yacimiento</h1>

    <table>
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ yacimiento.nombre }}</td>
            </tr>
            <tr>
                <th>Acronimo</th>
                <td>{{ yacimiento.acronimo }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ yacimiento.id }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if yacimiento.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Fechacreacion</th>
                <td>{% if yacimiento.fechaCreacion %}{{ yacimiento.fechaCreacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fechaactualizacion</th>
                <td>{% if yacimiento.fechaActualizacion %}{{ yacimiento.fechaActualizacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('yacimiento_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('yacimiento_edit', { 'id': yacimiento.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
